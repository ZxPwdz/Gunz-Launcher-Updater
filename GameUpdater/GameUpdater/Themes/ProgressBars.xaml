<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================== -->
    <!-- DARK FLAT PROGRESS BAR STYLES                  -->
    <!-- ============================================== -->

    <!-- Main Progress Bar Style -->
    <Style x:Key="GlowingProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Height" Value="6"/>
        <Setter Property="Background" Value="#0A1620"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Minimum" Value="0"/>
        <Setter Property="Maximum" Value="100"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <!-- Track Background -->
                        <Border x:Name="PART_Track"
                                Background="{TemplateBinding Background}"
                                CornerRadius="3"/>

                        <!-- Progress Fill -->
                        <Border x:Name="PART_Indicator"
                                CornerRadius="3"
                                HorizontalAlignment="Left"
                                Background="#2196F3"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Slim Progress Bar Style -->
    <Style x:Key="SlimProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Height" Value="4"/>
        <Setter Property="Background" Value="#0A1620"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Minimum" Value="0"/>
        <Setter Property="Maximum" Value="100"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <!-- Track Background -->
                        <Border x:Name="PART_Track"
                                Background="{TemplateBinding Background}"
                                CornerRadius="2"/>

                        <!-- Progress Fill -->
                        <Border x:Name="PART_Indicator"
                                CornerRadius="2"
                                HorizontalAlignment="Left"
                                Background="#2196F3"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- File Progress Bar Style -->
    <Style x:Key="FileProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Height" Value="4"/>
        <Setter Property="Background" Value="#0A1620"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Minimum" Value="0"/>
        <Setter Property="Maximum" Value="100"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <!-- Track Background -->
                        <Border x:Name="PART_Track"
                                Background="{TemplateBinding Background}"
                                CornerRadius="2"/>

                        <!-- Progress Fill -->
                        <Border x:Name="PART_Indicator"
                                CornerRadius="2"
                                HorizontalAlignment="Left"
                                Background="#1976D2"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
