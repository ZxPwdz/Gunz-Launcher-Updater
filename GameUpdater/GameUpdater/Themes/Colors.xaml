<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================== -->
    <!-- DARK GRADIENT FLAT THEME                       -->
    <!-- ============================================== -->

    <!-- Primary Background Colors - Darker Navy with subtle gradients -->
    <Color x:Key="PrimaryBackgroundColor">#070D15</Color>
    <Color x:Key="SecondaryBackgroundColor">#0C1824</Color>
    <Color x:Key="TertiaryBackgroundColor">#101E2E</Color>
    <Color x:Key="CardBackgroundColor">#0A1620</Color>
    <Color x:Key="SurfaceColor">#132030</Color>
    <Color x:Key="HeaderBackgroundColor">#0A141E</Color>

    <!-- Accent Colors - Vibrant Blue -->
    <Color x:Key="AccentPrimaryColor">#2196F3</Color>
    <Color x:Key="AccentSecondaryColor">#1976D2</Color>
    <Color x:Key="AccentHoverColor">#42A5F5</Color>
    <Color x:Key="AccentSuccessColor">#4CAF50</Color>
    <Color x:Key="AccentWarningColor">#FF9800</Color>
    <Color x:Key="AccentDangerColor">#F44336</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#A0AEC0</Color>
    <Color x:Key="TextMutedColor">#4A5568</Color>
    <Color x:Key="TextAccentColor">#2196F3</Color>

    <!-- Border Colors - Very Subtle -->
    <Color x:Key="BorderColor">#1A2D42</Color>
    <Color x:Key="BorderHoverColor">#2A4A6A</Color>
    <Color x:Key="BorderSubtleColor">#0F1E2D</Color>

    <!-- Solid Brushes -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="{StaticResource TertiaryBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>

    <SolidColorBrush x:Key="AccentPrimaryBrush" Color="{StaticResource AccentPrimaryColor}"/>
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentSecondaryColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="AccentSuccessBrush" Color="{StaticResource AccentSuccessColor}"/>
    <SolidColorBrush x:Key="AccentWarningBrush" Color="{StaticResource AccentWarningColor}"/>
    <SolidColorBrush x:Key="AccentDangerBrush" Color="{StaticResource AccentDangerColor}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>
    <SolidColorBrush x:Key="TextAccentBrush" Color="{StaticResource TextAccentColor}"/>

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderHoverBrush" Color="{StaticResource BorderHoverColor}"/>
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="{StaticResource BorderSubtleColor}"/>

    <!-- Gradient Brushes for Panels -->
    <LinearGradientBrush x:Key="PanelGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0C1824" Offset="0"/>
        <GradientStop Color="#081018" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0C1620" Offset="0"/>
        <GradientStop Color="#060C12" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="FooterGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0A1218" Offset="0"/>
        <GradientStop Color="#050A10" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0E1A26" Offset="0"/>
        <GradientStop Color="#0A1420" Offset="1"/>
    </LinearGradientBrush>

    <!-- Button Brushes -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#42A5F5"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#1976D2"/>

</ResourceDictionary>
