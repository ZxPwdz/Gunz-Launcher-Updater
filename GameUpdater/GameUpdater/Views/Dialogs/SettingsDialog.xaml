<Window x:Class="GameUpdater.Views.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="500" Height="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">

    <Border CornerRadius="8"
            Background="{StaticResource PrimaryBackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="Black" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="{StaticResource TitleBarGradientBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                        <Path Data="{StaticResource SettingsIcon}"
                              Fill="{StaticResource AccentPrimaryBrush}"
                              Width="18" Height="18"
                              Stretch="Uniform"/>
                        <TextBlock Text="SETTINGS"
                                   Style="{StaticResource TitleTextStyle}"
                                   Margin="12,0,0,0"/>
                    </StackPanel>

                    <Button Style="{StaticResource CloseButtonStyle}"
                            Click="CloseButton_Click"
                            HorizontalAlignment="Right">
                        <Path Data="{StaticResource CloseIcon}"
                              Fill="{StaticResource TextSecondaryBrush}"
                              Width="12" Height="12"
                              Stretch="Uniform"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Settings Content -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Style="{StaticResource ModernScrollViewerStyle}"
                          Margin="20">
                <StackPanel>
                    <!-- Server URLs Section -->
                    <TextBlock Text="SERVER URLS"
                               Style="{StaticResource TitleTextStyle}"
                               FontSize="11"
                               Foreground="{StaticResource AccentPrimaryBrush}"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Patch URL"
                               Style="{StaticResource MutedTextStyle}"
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="PatchUrlTextBox"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="0,0,0,12"/>

                    <TextBlock Text="Update Base URL"
                               Style="{StaticResource MutedTextStyle}"
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="UpdateBaseUrlTextBox"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="0,0,0,12"/>

                    <TextBlock Text="News URL"
                               Style="{StaticResource MutedTextStyle}"
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="NewsUrlTextBox"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="0,0,0,20"/>

                    <!-- Behavior Section -->
                    <TextBlock Text="BEHAVIOR"
                               Style="{StaticResource TitleTextStyle}"
                               FontSize="11"
                               Foreground="{StaticResource AccentPrimaryBrush}"
                               Margin="0,0,0,12"/>

                    <CheckBox x:Name="SkipUpdateCheckBox"
                              Style="{StaticResource ModernCheckBoxStyle}"
                              Content="Skip update check on startup"
                              Margin="0,0,0,8"/>

                    <CheckBox x:Name="MinimizeOnLaunchCheckBox"
                              Style="{StaticResource ModernCheckBoxStyle}"
                              Content="Minimize launcher when game starts"
                              Margin="0,0,0,8"/>

                    <CheckBox x:Name="CloseOnLaunchCheckBox"
                              Style="{StaticResource ModernCheckBoxStyle}"
                              Content="Close launcher when game starts"
                              Margin="0,0,0,20"/>

                    <!-- Game Section -->
                    <TextBlock Text="GAME"
                               Style="{StaticResource TitleTextStyle}"
                               FontSize="11"
                               Foreground="{StaticResource AccentPrimaryBrush}"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Game Executable"
                               Style="{StaticResource MutedTextStyle}"
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="GameExecutableTextBox"
                             Style="{StaticResource ModernTextBoxStyle}"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    CornerRadius="0,0,8,8">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="20,0">
                    <Button Content="Reset to Defaults"
                            Style="{StaticResource NavButtonStyle}"
                            Click="ResetButton_Click"
                            Margin="0,0,12,0"/>
                    <Button Content="Save"
                            Style="{StaticResource PlayButtonStyle}"
                            Width="100"
                            Height="36"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
